<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bj.po.Student" table="d_student" schema="dbteaching" lazy="false">
        <id name="stuId">
            <column name="stu_id" sql-type="int(11)"/>
        </id>
        <property name="stuName">
            <column name="stu_name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="stuSex">
            <column name="stu_sex" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="stuDate">
            <column name="stu_date" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="majorId">
            <column name="major_id" sql-type="int(11)"/>
        </property>
        <property name="classId">
            <column name="class_id" sql-type="int(11)"/>
        </property>
        <property name="stuInyear">
            <column name="stu_inyear" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="stuPwd">
            <column name="stu_pwd" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>