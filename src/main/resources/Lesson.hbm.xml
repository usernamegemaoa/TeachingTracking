<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bj.po.Lesson" table="d_lesson" schema="dbteaching" lazy="false">
        <id name="lessonId">
            <column name="lesson_id" sql-type="int(11)"/>
        </id>
        <property name="subjectId">
            <column name="subject_id" sql-type="int(11)"/>
        </property>
        <property name="lessonNum">
            <column name="lesson_num" sql-type="int(11)"/>
        </property>
        <property name="lessonDate">
            <column name="lesson_date" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>