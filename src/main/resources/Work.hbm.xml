<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bj.po.Work" table="d_work" schema="dbteaching" lazy="false">
        <id name="workId">
            <column name="work_id" sql-type="int(11)"/>
        </id>
        <property name="subjectId">
            <column name="subject_id" sql-type="int(11)"/>
        </property>
        <property name="lessonId">
            <column name="lesson_id" sql-type="int(11)"/>
        </property>
        <property name="workContent">
            <column name="work_content" sql-type="varchar(200)" length="200" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>